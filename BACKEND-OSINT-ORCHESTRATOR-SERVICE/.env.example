# OSINT Orchestrator Service 환경 변수 설정

# 서버 설정
PORT=8005
DEBUG=true

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/osint_db

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379

# 보안 설정
SECRET_KEY=osint-orchestrator-secret-key
ENVIRONMENT=development
LOG_LEVEL=INFO

# Task Orchestrator 설정
MAX_QUEUE_SIZE=10000
TASK_TIMEOUT_DEFAULT=3600
MAX_RETRIES_DEFAULT=3
WORKER_HEARTBEAT_TIMEOUT=300
PRIORITY_RECALC_INTERVAL=60

# 우선순위 임계값
HIGH_PRIORITY_THRESHOLD=100
CRITICAL_PRIORITY_THRESHOLD=1000
MAX_WORKERS_PER_TASK_TYPE=10

# 이벤트 발행 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
NATS_URL=nats://localhost:4222
EVENT_PUBLISHER=kafka

# 서비스 디스커버리 (직접 URL)
PLANNING_SERVICE_URL=http://localhost:8006
SOURCE_SERVICE_URL=http://localhost:8007
COLLECTOR_SERVICE_URL=http://localhost:8002
ANALYSIS_SERVICE_URL=http://localhost:8001

# 서비스 디스커버리 (Eureka)
EUREKA_ENABLED=false
EUREKA_SERVICE_URLS=http://localhost:8761/eureka
EUREKA_APP_NAME=osint-orchestrator
EUREKA_INSTANCE_HOST=
EUREKA_INSTANCE_IP=
EUREKA_METADATA={"version":"v1"}

# Consul 설정 (환경 설정 로드)
CONSUL_HTTP_ADDR=http://localhost:8500
CONSUL_HTTP_TOKEN=
CONSUL_HTTP_SSL_VERIFY=true
CONSUL_HTTP_TIMEOUT=5

