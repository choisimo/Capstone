# OSINT Source Service 환경 변수 설정

# 서버 설정
PORT=8007
DEBUG=true
ENVIRONMENT=development

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/osint_db

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379

# 보안 설정
SECRET_KEY=osint-source-secret-key
LOG_LEVEL=INFO

# Source Registry 설정
MAX_SOURCES_PER_REQUEST=100
ROBOTS_TXT_CACHE_TTL=86400
SOURCE_VALIDATION_TIMEOUT=30
TRUST_SCORE_THRESHOLD=0.3

# 이벤트 발행 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
NATS_URL=nats://localhost:4222
EVENT_PUBLISHER=kafka

# 서비스 디스커버리 (Eureka)
EUREKA_ENABLED=false
EUREKA_SERVICE_URLS=http://localhost:8761/eureka
EUREKA_APP_NAME=osint-source-service
EUREKA_INSTANCE_HOST=
EUREKA_INSTANCE_IP=
EUREKA_METADATA={"version":"v1"}

# Consul 설정 (환경 설정 로드)
CONSUL_HTTP_ADDR=http://localhost:8500
CONSUL_HTTP_TOKEN=
CONSUL_HTTP_SSL_VERIFY=true
CONSUL_HTTP_TIMEOUT=5
