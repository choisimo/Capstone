# OSINT Source Service 환경 변수 설정

# 서버 설정
PORT=8007
DEBUG=true

# 데이터베이스 설정
DATABASE_URL=postgresql://user:password@localhost:5432/osint_db

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379

# 보안 설정
SECRET_KEY=osint-source-secret-key
ENVIRONMENT=development
LOG_LEVEL=INFO

# Source Registry 설정
MAX_SOURCES_PER_REQUEST=100
ROBOTS_TXT_CACHE_TTL=86400
SOURCE_VALIDATION_TIMEOUT=30
TRUST_SCORE_THRESHOLD=0.3

# 이벤트 발행 설정
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
NATS_URL=nats://localhost:4222
EVENT_PUBLISHER=kafka
