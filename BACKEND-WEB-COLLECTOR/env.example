# Hybrid Intelligent Crawling System Environment Variables

# === API Keys ===
# Gemini API Key (Required)
GEMINI_API_KEY=your-gemini-api-key-here

# API Authentication Key (Optional, default provided for development)
API_KEY=your-api-authentication-key

# === Server Configuration ===
# Server Host
HOST=0.0.0.0

# Server Port
PORT=8000

# Debug Mode
DEBUG=false

# === Database Configuration (Phase 3 - TASK-015) ===
# PostgreSQL Database URL
# DATABASE_URL=postgresql://user:password@localhost:5432/hybrid_crawler

# === Redis Configuration (Phase 3 - TASK-016) ===
# Redis URL for caching
# REDIS_URL=redis://localhost:6379/0

# === Message Queue Configuration (Phase 3 - TASK-017) ===
# Kafka Broker
# KAFKA_BROKER=localhost:9092

# === Monitoring Configuration ===
# Prometheus Metrics Port
# METRICS_PORT=9090

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# === System Configuration ===
# Max Workers for concurrent processing
MAX_WORKERS=5

# Default Check Interval (minutes)
DEFAULT_CHECK_INTERVAL=60

# Max History Size
MAX_HISTORY_SIZE=1000

# === Feature Flags ===
# Enable AI Analysis
ENABLE_AI_ANALYSIS=true

# Enable Auto Template Learning
ENABLE_AUTO_LEARNING=true

# Enable Monitoring Dashboard
ENABLE_DASHBOARD=false
