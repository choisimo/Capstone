# Infrastructure Environment Variables
# Copy to .env and fill in actual values (do not commit secrets)

# ===========================================
# Database Configuration
# ===========================================

# PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=osint_db
POSTGRES_PORT=5432
DB_NAME=osint_db
DB_USER=osint_user
DB_PASSWORD=

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=osint_data
MONGO_PORT=27017
MONGO_URL=

# ===========================================
# Service Discovery & Configuration
# ===========================================

# Consul
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_HTTP_PORT=8500
CONSUL_DNS_PORT=8600
CONSUL_SERVER_PORT=8300
CONSUL_ENABLED=false
CONSUL_DISCOVERY_ENABLED=false
CONSUL_CONFIG_ENABLED=false

# Redis
REDIS_PORT=6379

# ===========================================
# Application Configuration
# ===========================================

# Spring Boot
SPRING_PROFILES_ACTIVE=dev
HIBERNATE_DDL_AUTO=update

# Gateway
GATEWAY_PORT=8080

# Logging
LOG_LEVEL=INFO
HIBERNATE_LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===========================================
# Security
# ===========================================

JWT_SECRET_KEY=

# ===========================================
# Monitoring (Grafana)
# ===========================================

GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=
