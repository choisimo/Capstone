# ABSA Service 환경 변수 설정

# 서버 설정
PORT=8003
DEBUG=true
ENVIRONMENT=development

# 데이터베이스 설정
DATABASE_URL=postgresql://postgres:password@localhost:5432/pension_sentiment

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379

# 외부 서비스 연동
ANALYSIS_SERVICE_URL=http://localhost:8001

# 요청 처리 설정
MAX_CONCURRENT_REQUESTS=5
REQUEST_TIMEOUT=30

# ABSA 모델 설정
MODEL_CACHE_SIZE=100
ASPECT_EXTRACTION_CONFIDENCE=0.7
SENTIMENT_CONFIDENCE=0.6

# 서비스 디스커버리 (Eureka)
EUREKA_ENABLED=false
EUREKA_SERVICE_URLS=http://localhost:8761/eureka
EUREKA_APP_NAME=absa-service
EUREKA_INSTANCE_HOST=
EUREKA_INSTANCE_IP=
# JSON 문자열 형태로 추가 메타데이터 설정
EUREKA_METADATA={"version":"v1"}

# Consul 설정 (환경 설정 로드)
CONSUL_HTTP_ADDR=http://localhost:8500
CONSUL_HTTP_TOKEN=
CONSUL_HTTP_SSL_VERIFY=true
CONSUL_HTTP_TIMEOUT=5
