# Java Services Environment Variables
# Copy to .env and fill in actual values (do not commit secrets)

# ===========================================
# Database Configuration
# ===========================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=osint_db
DB_USER=osint_user
DB_PASSWORD=
DB_URL=jdbc:postgresql://localhost:5432/osint_db

# Hibernate
HIBERNATE_DDL_AUTO=update

# ===========================================
# Service Discovery
# ===========================================

CONSUL_HOST=localhost
CONSUL_PORT=8500
SPRING_CLOUD_CONSUL_ENABLED=false
SPRING_CLOUD_CONSUL_DISCOVERY_ENABLED=false
SPRING_CLOUD_COMPATIBILITY_VERIFIER_ENABLED=false

# ===========================================
# Application Configuration
# ===========================================

SPRING_PROFILES_ACTIVE=dev
LOG_LEVEL=INFO
HIBERNATE_LOG_LEVEL=INFO

# Service Ports (for local development)
GATEWAY_PORT=8080
ANALYSIS_SERVICE_PORT=8001
COLLECTOR_SERVICE_PORT=8002
ABSA_SERVICE_PORT=8003
ALERT_SERVICE_PORT=8004
OSINT_ORCHESTRATOR_PORT=8005
OSINT_PLANNING_PORT=8006
OSINT_SOURCE_PORT=8007

# Service URLs (for inter-service communication)
SERVICES_COLLECTOR_URL=http://localhost:8002
SERVICES_ANALYSIS_URL=http://localhost:8001
SERVICES_ABSA_URL=http://localhost:8003
SERVICES_ALERT_URL=http://localhost:8004
SERVICES_OSINT_ORCHESTRATOR_URL=http://localhost:8005
SERVICES_OSINT_PLANNING_URL=http://localhost:8006
SERVICES_OSINT_SOURCE_URL=http://localhost:8007

# ===========================================
# Security
# ===========================================

JWT_SECRET_KEY=
