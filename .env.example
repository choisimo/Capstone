# Environment variables template (do not commit actual secrets)
# 12-Factor: keep configuration in the environment. Copy to .env locally and fill values.

# Task Master / Scripts
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=64000
TEMPERATURE=0.3
DEBUG=false
LOG_LEVEL=info
DEFAULT_SUBTASKS=5
DEFAULT_PRIORITY=medium

# Optional: OpenAI for DocSync advanced features
OPENAI_API_KEY=

# DocSync
# Enable strict check in CI by default via workflow step env when needed
DOCSYNC_STRICT=true

# ------------------------------------------------------------------
# Production/CI required variables (no secrets committed)
# These are referenced by docker-compose.production.yml
# ------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=pension_sentiment
POSTGRES_PORT=5432

# Shared database URL used by services (override per-service if needed)
# Example: postgresql://<user>:<pass>@postgres:5432/pension_sentiment
DATABASE_URL=

MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=osint_data
MONGO_PORT=27017
# Example: mongodb://<user>:<pass>@mongo:27017/osint_data?authSource=admin
MONGO_URL=

JWT_SECRET_KEY=

# Grafana admin (no defaults in production)
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=

# CORS (example values)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
