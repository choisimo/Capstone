# Root Environment Variables Template
# Copy to .env and fill in actual values (do not commit secrets)

# ===========================================
# IMPORTANT: Service-specific .env files
# ===========================================
# - Infrastructure services: see infra/.env.example
# - Java services: see services/java/.env.example

# ===========================================
# Development Tools & Scripts
# ===========================================

# Task Master / Scripts
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=
MODEL=claude-3-7-sonnet-20250219
MAX_TOKENS=64000
TEMPERATURE=0.3
DEBUG=false
LOG_LEVEL=info
DEFAULT_SUBTASKS=5
DEFAULT_PRIORITY=medium

# Optional: OpenAI for DocSync advanced features
OPENAI_API_KEY=

# DocSync
DOCSYNC_STRICT=true

# ===========================================
# Common Variables (used across environments)
# ===========================================

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=
POSTGRES_DB=osint_db
POSTGRES_PORT=5432
DATABASE_URL=

# MongoDB
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=osint_data
MONGO_PORT=27017
MONGO_URL=

# Security
JWT_SECRET_KEY=

# Monitoring
GF_ADMIN_USER=admin
GF_ADMIN_PASSWORD=

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ChangeDetection.io
# Optional: If not provided, will be auto-extracted from container on first run
CHANGEDETECTION_API_KEY=
CHANGEDETECTION_BASE_URL=http://changedetection:5000
