# Alert Service 환경 변수 설정

# 서버 설정
PORT=8004
DEBUG=false

# 데이터베이스 설정
DATABASE_URL=postgresql://pension_user:pension_pass@localhost:5432/pension_sentiment

# Redis 캐시 설정
REDIS_URL=redis://localhost:6379

# 서비스 기본 설정
SERVICE_NAME=alert-service
SERVICE_VERSION=1.0.0

# 외부 서비스 API 키
EMAIL_SERVICE_API_KEY=your-email-api-key
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-token

# SMTP 설정 (이메일 전송)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=alerts@pensionsentiment.com

# 알림 설정
MAX_RETRIES=3
RETRY_DELAY_SECONDS=300
BATCH_SIZE=100
RATE_LIMIT_PER_MINUTE=60
MAX_ALERTS_PER_HOUR=1000

# 보안 설정
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=*

# 모니터링 설정
LOG_LEVEL=INFO
ENABLE_METRICS=true
METRICS_PORT=9090

# 외부 서비스 URL
ANALYSIS_SERVICE_URL=http://localhost:8001
COLLECTOR_SERVICE_URL=http://localhost:8002
ABSA_SERVICE_URL=http://localhost:8003

# 방해 금지 시간 설정
QUIET_HOURS_ENABLED=true
QUIET_HOURS_START=22:00
QUIET_HOURS_END=08:00
QUIET_HOURS_TIMEZONE=UTC
QUIET_HOURS_CRITICAL_ONLY=true