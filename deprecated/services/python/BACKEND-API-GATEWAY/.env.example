# API Gateway 환경 변수 설정

# 서버 설정
PORT=8000
DEBUG=true
ENVIRONMENT=development

# 마이크로서비스 URL 설정 (직접 URL)
ANALYSIS_SERVICE_URL=http://localhost:8001
COLLECTOR_SERVICE_URL=http://localhost:8002
ABSA_SERVICE_URL=http://localhost:8003
ALERT_SERVICE_URL=http://localhost:8004

# 요청 타임아웃 설정 (초)
DEFAULT_TIMEOUT=30
HEALTH_CHECK_TIMEOUT=5

# Rate Limiting 설정
RATE_LIMIT_PER_MINUTE=100

# JWT 인증 설정 (선택사항)
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS 설정
ALLOWED_ORIGINS=*
ALLOWED_METHODS=*
ALLOWED_HEADERS=*

# 로깅 설정
LOG_LEVEL=INFO

# 서비스 디스커버리 (선택적: Eureka 등록을 사용할 경우)
EUREKA_ENABLED=false
EUREKA_SERVICE_URLS=http://localhost:8761/eureka
EUREKA_APP_NAME=api-gateway
EUREKA_INSTANCE_HOST=
EUREKA_INSTANCE_IP=
EUREKA_METADATA={"version":"v1"}

# Consul 설정 (환경 설정 로드)
CONSUL_HTTP_ADDR=http://localhost:8500
CONSUL_HTTP_TOKEN=
CONSUL_HTTP_SSL_VERIFY=true
CONSUL_HTTP_TIMEOUT=5
